@model Connect4.Models.Match

@{
    ViewBag.Title = "Crea Partita";
}

<h2>Crea partita</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2"><b>Nome</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "Inserisci una partita", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.VersusComputer)
                    @Html.LabelFor(m => m.VersusComputer)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crea" class="btn btn-default" />
                <input type="hidden" value="Create"/>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Torna alle partite", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
