@model Connect4.Models.RegisterViewModel

@{
    ViewBag.Title = "Registrati";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>Crea un nuovo profilo</h2>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder= "Username"} })
                @Html.ValidationMessageFor(model => model.Username, "Inserisci un username", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder= "Email"} })
                @Html.ValidationMessageFor(model => model.Email, "Inserisci un'email", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder="Password" })
                @Html.ValidationMessageFor(m => m.Password, "Inserisci una password lunga 8 caratteri contenente un carattere speciale e un numero", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Conferma password</b></p>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder="Conferma password"  })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "Conferma password non può essere diverso dalla password", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Indirizzo</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Indirizzo"} })
                @Html.ValidationMessageFor(model => model.Address, "Inserisci un indirizzo", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>CAP</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "CAP"} })
                @Html.ValidationMessageFor(model => model.ZipCode, "Inserisci un cap, deve essere un numero di 5 cifre", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Città</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Town, new { htmlAttributes = new { @class = "form-control", @placeholder = "Città"} })
                @Html.ValidationMessageFor(model => model.Town, "Inserisci una città", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <p class="control-label col-md-2"><b>Provincia</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control", @placeholder = "Provincia"} })
                @Html.ValidationMessageFor(model => model.District, "Inserisci una provincia (es: VE)", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Nickname</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nickname"} })
                @Html.ValidationMessageFor(model => model.Nickname, "Inserisci un nickname", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" value="Register">
                <input type="submit" value="Registrati" class="btn btn-default" />
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}